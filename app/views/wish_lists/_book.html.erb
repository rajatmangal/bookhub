<div class="container">
	<% if obj.length == 0 %>
	<center>
		<h3>
			You have not added any books in your Wishlist yet.
		</h3><br>
	</center>
	<% end %>
  <% obj.each do |element| %>
	
  <% if element.user == current_user%>
    <div class="panel panel-info">
        <div class="panel-heading">
         <center> <h3 class="panel-title">Book Information </h3></center>
        </div>
      <div class="panel-body">
        <center>
	        Title: - <%= element[:name] %> <br>
          ISBN Number: - <%= element[:ISBN] %> <br>
					<% found = false %>
					<br>
          <% if logged_in? %>
            <% if (element.user == current_user || current_user.is_admin == "true") %>
							<%= link_to "Show Book", wish_list_path(element), class: "btn btn-primary btn-sm"%>
              <%= link_to "Edit Book", edit_wish_list_path(element), class: "btn btn-primary btn-sm"%>
              <%= link_to "Delete Book", wish_list_path(element), method: "delete" , class: "btn btn-primary btn-sm"%>
            <% end %>
          <% end %>
        </center>
			</div>
    </div>
		
  <%end%>
	<%end%>
</div>



