      <div class="row">
		    <div class="col-xs-8 col-xs-offset-2">
			    <div class="panel panel-danger">
				    <div class="panel-heading">
					    <h2 class="panel-title">
              <h2><%= pluralize(@wish_list.errors.count, "error") %> prohibited this wish_list from being saved:</h2>
                <div class="panel-body">
                  <ul>
                      <% @wish_list.errors.full_messages.each do |message| %>
