<%= render 'layouts/navigation' %>
<div>
	<div class="container">
		<div id="error">
      <%= render 'layouts/messages' %>
    </div>
	<div id="background">
		<div class="panel panel-default">
      <div class="panel-heading">
       <center> <h3 class="panel-title">Book Information</h3></center>
      </div>
    <div class="panel-body">
      <center>
        <% if @book.image_file_name != nil%>
	      	<%= image_tag @book.image.url(:large),class:"img-thumbnail image2"%><br>
	      <%else%>
		      <%= image_tag "preview.jpg",class:"img-thumbnail image2" %><br>
	      <%end%>
      Title: - <%= @book.name %> <br>
      ISBN Number: - <%= @book.ISBN %> <br>
      Author: - <%= @book.author %> <br>
			Price: - <%= @book.price %> <br>
			Availability: - <%= @book.availability %> <br>
			Description: - <%= @book.description %> <br>
			
      </center>
    </div>
</div>
		<p id="match"></p>
		<p>
		  <center>
				<% if @book.user == current_user %>
      		<%= link_to 'Edit Book', edit_book_path, class: "btn btn-primary btn-sm" %>
				<% else %>
				<a class = "btn btn-primary btn-sm" href = "/books/buy_book/<%=@book.id%>"> Buy Book </a>
					
				<% end %>
     		  <%= link_to 'List All Books', books_path, class: "btn btn-primary btn-sm" %>
				<a href = "https://www.amazon.ca/s/ref=nb_sb_noss?url=search-alias%3Dstripbooks&field-keywords=<%=@book.ISBN%>" class= "btn btn-primary btn-sm">Search This Book on Amazon</a>
				<a href = "https://www.bookfinder.com/search/?author=&title=&lang=en&isbn=<%=@book.ISBN%>&new_used=*&destination=ca&currency=CAD&mode=basic&st=sr&ac=qr" class= "btn btn-primary btn-sm">Compare Price for this Book</a>
      </center>
		</p>
		<br>
		<br>
		<br>
		<br>
		
</div>
</div>
</div>
