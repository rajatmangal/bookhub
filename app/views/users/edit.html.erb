  		  <div class="control-label col-sm-2">
  		  <%= f.label :Password %>
  		  </div>
    	<!--<label for="inputPassword3" class="col-sm-2 control-label">Password</label>-->
    	<div class="col-sm-10">
    	  <%= f.password_field :password, class: "form-control", id:"inputPassword3", placeholder:"Password" ,autocomplete: "off" %>
